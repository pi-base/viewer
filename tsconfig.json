{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "rollup.config.js",
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "cypress/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  }
}