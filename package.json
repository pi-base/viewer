    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "dev": "rollup -c -w",
    "fmt": "prettier --write 'src/**/*.ts'",
    "fmt:check": "prettier --check 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts'",
    "start": "sirv public --single",
